<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="Demigods">
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <path id="Demigods.classpath">
        <pathelement location="bin"/>
        <pathelement location="lib/craftbukkit.jar"/>
        <pathelement location="lib/factions.jar"/>
        <pathelement location="lib/worldedit.jar"/>
        <pathelement location="lib/worldguard.jar"/>
        <pathelement location="lib/campstamp.jar"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
        <mkdir dir="demigods"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="bin"/>
        <delete dir="demigods"/>
    </target>
    <target depends="clean" name="cleanall"/>
    <target depends="build-subprojects,build-project" name="build"/>
    <target name="build-subprojects"/>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
            <src path="src"/>
            <classpath refid="Demigods.classpath"/>
        </javac>
        <jar jarfile="demigods/Demigods.jar" basedir="bin"/>
    </target>
    <target description="Build all projects which reference this project. Useful to propagate changes."
            name="build-refprojects"/>
</project>
